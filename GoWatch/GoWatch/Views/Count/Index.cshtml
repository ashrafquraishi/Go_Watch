@model IEnumerable<GoWatch.Models.Count>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/><br/>
<style>
    body {
        background-position: center;
        height: 20px;
        background-image: url('../../Images/15002.jpg');
        background-position: center;
        background-repeat: no-repeat, repeat;
        background-size: auto;
        padding: 50px;
    }
</style>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Message) at | @Html.DisplayFor(modelItem => item.Countdate)<br />
                @Html.DisplayFor(modelItem => item.Countlike) likes<br />
                @Html.ActionLink("Like", "Like", new { id = item.CountId })
            </td>

            <td></td>

        </tr>
    }

</table>
